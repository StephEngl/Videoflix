{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "django": true,
            "justMyCode": false
        },
        {
            "name": "RQ Worker: Remote Attach",
            "type": "python",
            "request": "attach",
